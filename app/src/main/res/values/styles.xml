<resources>

    <!-- Base application theme. -->
    <style name="HoloTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.NoActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.AppTheme.Light.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar" />

</resources>
