<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_gray"
    tools:context=".mainpage">

    <View
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/setting_friend_frame" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/white"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/timekeeper_titlebar"/>

    <View
        android:id="@+id/timekeeper_logo"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:id="@+id/menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/mainpage_menu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="165dp"
        android:fontFamily="@font/quicksand_bold"
        android:letterSpacing="0.05"
        android:text="@string/friends"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/friend_list"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fadingEdge="none"
        android:gravity="center_horizontal"
        android:numColumns="3"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"
        android:horizontalSpacing="13dp" />

    <Button
        android:id="@+id/add_friend_btn"
        android:layout_width="103dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/setting_btn"
        android:text="ADD FRIENDS"
        android:textColor="@color/white"
        android:translationZ="2dp" />


</RelativeLayout>