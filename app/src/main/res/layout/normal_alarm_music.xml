<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".normal_alarm_music"
    tools:layout_editor_absoluteY="25dp">

    <View
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:background="@drawable/normal_music_titlebar"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/music"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/music_list1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Default"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingLeft="30dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="95dp" />

    <ListView
        android:id="@+id/music_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/music_list1"
        android:choiceMode="singleChoice"
        android:divider="@null" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/music_apply"
            android:layout_width="167dp"
            android:layout_height="48dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="28dp"
            android:background="@drawable/normal_btn"
            android:elevation="2dp"
            android:text="APPLY"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </FrameLayout>


</RelativeLayout>