<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A7A7A"
    android:orientation="vertical"
    android:paddingBottom="24.0dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="13dp"
        android:text="記錄起床或睡著"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="Step 1 進入「設定醒/睡著」的頁面"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:src="@drawable/view4_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="Step 2  回想當初鬧鐘響後的1分鐘"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:text="是否有起床了 , 並按下按鈕"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:src="@drawable/view4_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="Step 3  看到底下出現紅色的字 , 即可完成!"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="280dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:src="@drawable/view4_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="160dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/textframe"
            android:elevation="2dp"
            android:text="開始使用"
            android:textSize="18sp"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>

</RelativeLayout>